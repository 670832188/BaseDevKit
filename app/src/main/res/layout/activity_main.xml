<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dev.kit.testapp.MainActivity">

    <TextView
        android:id="@+id/tv_net_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@color/color_light_grey"
        android:gravity="center"
        android:padding="@dimen/margin_normal"
        android:text="网络请求组件测试" />

    <TextView
        android:id="@+id/tv_upload_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@color/color_light_grey"
        android:gravity="center"
        android:padding="@dimen/margin_normal"
        android:text="文件上传示例" />

    <TextView
        android:id="@+id/tv_vp_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@color/color_light_grey"
        android:gravity="center"
        android:padding="@dimen/margin_normal"
        android:text="层叠ViewPager" />

    <TextView
        android:id="@+id/tv_property_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@color/color_light_grey"
        android:gravity="center"
        android:padding="@dimen/margin_normal"
        android:text="属性动画" />

    <com.dev.kit.basemodule.multiChildHistogram.MultiGroupHistogramView
        android:id="@+id/multiGroupHistogramView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/page_margin" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_common_white"
    android:orientation="vertical"
    tools:context="com.dev.kit.testapp.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:src="@mipmap/ic_delete"
            android:id="@+id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_delete" />

        <TextView
            android:id="@+id/tv_net_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@color/color_light_grey"
            android:gravity="center"
            android:padding="@dimen/margin_normal"
            android:text="网络请求组件测试"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_upload_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@color/color_light_grey"
            android:gravity="center"
            android:padding="@dimen/margin_normal"
            android:text="Bitmap测试"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_vp_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@color/color_light_grey"
            android:gravity="center"
            android:padding="@dimen/margin_normal"
            android:text="层叠ViewPager"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_property_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@color/color_light_grey"
            android:gravity="center"
            android:padding="@dimen/margin_normal"
            android:text="属性动画"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_MultiGroupHistogramView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@color/color_light_grey"
            android:gravity="center"
            android:padding="@dimen/margin_normal"
            android:text="分组直方图表"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_set_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@color/color_light_grey"
            android:gravity="center"
            android:padding="@dimen/margin_normal"
            android:text="设置字体大小"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@color/color_light_grey"
            android:gravity="center"
            android:padding="@dimen/margin_normal"
            android:text="indicator"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_audio_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@color/color_light_grey"
            android:gravity="center"
            android:padding="@dimen/margin_normal"
            android:text="音频动画"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_media_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@color/color_light_grey"
            android:gravity="center"
            android:padding="@dimen/margin_normal"
            android:text="media选择器"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_video_record1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@color/color_light_grey"
            android:gravity="center"
            android:padding="@dimen/margin_normal"
            android:text="video 录制1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_video_record2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@color/color_light_grey"
            android:gravity="center"
            android:padding="@dimen/margin_normal"
            android:text="video 录制2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_db_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@color/color_light_grey"
            android:gravity="center"
            android:padding="@dimen/margin_normal"
            android:text="db 初始化"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_provider_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@color/color_light_grey"
            android:gravity="center"
            android:padding="@dimen/margin_normal"
            android:text="provider 查询数据"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>

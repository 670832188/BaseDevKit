<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_common_white"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_large">

    <TextView
        android:id="@+id/view_free_fall"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_large"
        android:background="@drawable/bg_circle_orange"
        android:gravity="center"
        android:text="自由落体"
        android:textColor="@color/color_common_white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/view_horizontal_projectile_motion"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginLeft="@dimen/margin_large"
        android:background="@drawable/bg_circle_orange"
        android:gravity="center"
        android:text="平抛运动"
        android:textColor="@color/color_common_white"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_normal"
            android:paddingBottom="@dimen/margin_small"
            android:paddingLeft="@dimen/margin_large"
            android:paddingRight="@dimen/margin_large"
            android:paddingTop="@dimen/margin_small"
            android:text="还原"
            android:textColor="@color/color_common_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_normal"
            android:paddingBottom="@dimen/margin_small"
            android:paddingLeft="@dimen/margin_large"
            android:paddingRight="@dimen/margin_large"
            android:paddingTop="@dimen/margin_small"
            android:text="启动"
            android:textColor="@color/color_common_black"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
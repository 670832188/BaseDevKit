<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:typeface">serif</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BaseTheme.BaseAppTheme">
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BaseTheme.TranslucentStatusTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BaseDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--字体style-->

    <style name="text_style_normal">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/color_common_text</item>
    </style>

    <style name="text_style_large">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/color_common_text</item>
    </style>

    <style name="text_style_large_white">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/color_common_white</item>
    </style>

</resources>
